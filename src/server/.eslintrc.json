{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "google"],
  "plugins": ["googleappsscript"],
  "env": {
    "googleappsscript/googleappsscript": true
  },
  "globals": {
    "SpreadsheetApp": true,
    "Drive": true,
    "HtmlService": true,
    "global": true
  },
  "rules": {
    "import/prefer-default-export": 0,
    "require-jsdoc": 0,
    "guard-for-in": 0
  }
}
